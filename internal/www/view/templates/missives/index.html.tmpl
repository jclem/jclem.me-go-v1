{{define "missives/index"}}
<div class="flex flex-col gap-3">
	<h1>Missives</h1>

	<ul class="w-full border border-border divide-y divide-border font-mono text-sm">
		{{range .}}
		<li class="flex flex-col divide-y divide-dashed divide-border">
            <img src="{{.URL}}" alt="{{.Alt}}" />

			<datetime datetime="{{.InsertedAt}}" class="p-1">{{.InsertedAt.Format "January 2, 2006"}}</datetime>

            <div class="font-sans p-4">
            {{.Content}}
            </div>
		</li>
		{{end}}
	</ul>
</div>
{{end}}
